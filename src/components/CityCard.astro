---
import type { InferEntrySchema } from "astro:content";
import { Picture } from "astro:assets";
import LinkButton from "@components/LinkButton.astro";

type Props = InferEntrySchema<"city">["cities"][number];
const { name, description, mainImg } = Astro.props;
---

<div>
  <Picture
    class="rounded-lg aspect-video object-cover"
    src={mainImg}
    formats={["avif", "webp"]}
    alt=""
  />
  <h3 class="text-2xl mt-2 font-bold">{name}</h3>
  <p class="leading-5 mt-3 pl-4 border-l-2 border-gray-300 text-gray-700">
    {description}
  </p>
  <LinkButton to={`/${name.toLowerCase()}`} class="mt-4" label={`Discover ${name}`} />
</div>
